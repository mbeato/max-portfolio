{
  "project": {
    "name": "Max Portfolio Website",
    "description": "Modern portfolio website with Next.js, Tailwind CSS v4, and advanced animations",
    "version": "1.0.0"
  },
  "development": {
    "htmlElementRequirements": {
      "divElementsRequireIds": true,
      "idNamingConvention": "[section]-[element]-[purpose]",
      "description": "Every HTML div element must have a unique id attribute for precise Claude Code targeting"
    },
    "codeStandards": {
      "typescript": true,
      "strictMode": true,
      "accessibilityCompliance": "WCAG 2.1 AA",
      "performanceTargets": {
        "lighthouse": {
          "performance": 90,
          "accessibility": 90,
          "bestPractices": 90,
          "seo": 90
        }
      }
    },
    "buildCommands": {
      "dev": "npm run dev --turbopack",
      "build": "npm run build",
      "lint": "npm run lint",
      "typecheck": "Built into npm run build"
    }
  },
  "automation": {
    "gitWorkflow": {
      "autoCommitMessages": true,
      "requireLintingBeforeCommit": true,
      "requireTypeCheckingBeforeCommit": true
    },
    "performanceMonitoring": {
      "runLighthouseOnBuild": true,
      "trackCoreWebVitals": true
    }
  },
  "dependencies": {
    "core": [
      "next@15.4.6",
      "react@19.1.0",
      "react-dom@19.1.0",
      "typescript@^5",
      "tailwindcss@^4"
    ],
    "toInstall": [
      "framer-motion",
      "three",
      "@react-three/fiber",
      "@react-three/drei",
      "react-intersection-observer",
      "emailjs-com",
      "lucide-react"
    ]
  },
  "fileStructure": {
    "componentsPath": "src/components",
    "sectionsPath": "src/components/sections",
    "uiPath": "src/components/ui",
    "3dPath": "src/components/3d",
    "hooksPath": "src/hooks",
    "libPath": "src/lib",
    "stylesPath": "src/styles"
  },
  "customRules": {
    "everyDivNeedsId": {
      "enabled": true,
      "description": "Automatically suggest unique IDs for div elements during creation",
      "pattern": "[section]-[element]-[purpose]",
      "examples": [
        "hero-title-container",
        "about-skills-grid",
        "projects-card-wrapper",
        "contact-form-container"
      ]
    },
    "animationPerformance": {
      "enabled": true,
      "preferTransformAndOpacity": true,
      "respectReducedMotion": true,
      "defaultDuration": "250ms"
    },
    "accessibility": {
      "enabled": true,
      "requireAriaLabels": true,
      "requireSemanticHTML": true,
      "checkColorContrast": true
    }
  }
}